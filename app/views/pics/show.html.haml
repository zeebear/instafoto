#pic_show.row
  .col-md-6.col-md-offset-3
    .panel.panel-default
      .panel-heading.pic_image
        = image_tag @pic.photo.url
      .panel-body
        %h1= @pic.title

        %p= @pic.description

        %p
      .panel-footer
        .row
          .col-md-6
            %p.user
              by
              = @pic.user.email
          .col-md-6
            .btn-group.pull-right
              - if user_signed_in?
                = link_to 'Edit', edit_pic_path, class: "btn btn-info"
                = link_to 'Delete', root_path, method: :delete, data: { confirm: "Are you sure you want to delete this pic?"}, class: "btn btn-danger"
